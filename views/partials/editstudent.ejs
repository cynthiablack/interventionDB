<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
<h1><%= student.firstName %> <%= student.lastName %>'s Profile</h1>

<div class="td-margin">
    <div class="container form-container" id="edit-student">
        <div class="card-content">
            <details>
                <summary class="blue lighten-2 btn btn-small"><i class="fa-solid fa-user-pen"></i> Edit <%= student.firstName %> <%= student.lastName %></summary>
                <form action="/students/editStudent/<%=students[i]%>?method=PUT" method="POST">
                <div class="mb-3">
                    <label for="firstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" value="<%=students[i].firstName%>">
                </div>
                <div class="mb-3">
                  <label for="lastName" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="lastName" name="lastName" value="<%=students[i].lastName%>">
              </div>
                <button type="submit" class="blue lighten-2 btn btn-small space-below">Update Student</button>
              </form>
              </details>
        </div>
    </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="card">
      <h2><!--Intervention Title--> </h2>
      <div class="row p-5 justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-danger fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <form
        action="/post/editPostPage/<%= post.id %>"
      
        class="col-3"
      >
        <button class="btn btn-primary  fa-user-pen" type="submit">edit</button>
      </form>

        <%}%>
      </div>
    
      <div class="text-center p-5">
        <p><%= post.caption %></p>
      </div>
  </div>
    <div class="container">
      <div class="row card  mt-5">
        <h2>Comments:</h2>
        <ul class="row list-unstyled">
          <% for(var i=0; i<comments.length; i++) {%>
            <li class="col-6 ">
             <h4>"<%= comments[i].comment%>"</h4>
           
            <form
            class=""
            action="/comment/likeComment/<%= comments[i]._id %>?_method=PUT"
            method="POST"
          >
            <button class="btn btn-danger fa fa-heart" type="submit"></button>
          </form>
          <p class="p-3">Comment Likes: <%= comments[i].likes %></p>
        </li>
            <%if(comments[i].user == user.id){ %>
              <form
                action="/comment/deleteComment/<%= comments[i]._id %>?_method=DELETE"
                method="POST"
                class="col-3"
              >
                <button class="btn btn-primary fa fa-trash" type="submit"></button>
              </form>

             
          <% } %>
          <% } %>
          </ul>
      </div>
     
      <h2 class="py-5">Add a Comment</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary " href="/profile">Return to Profile</a>
      <div class="py-3"></div>
      <a class="btn btn-primary " href="/feed">Return to Feed</a>
      <div class="py-3"></div>
      <a href="/logout" class=" btn btn-primary ">Logout</a>
      <div class="py-5"></div>
    </div>
  </div>
</div>

<% if (students.length > 0) { %>
  <table class="striped">
     <thead>
         <tr>
          <th>Date</th>
          <th>Intervention Title</th>
          <th>Activity</th>
          <th>Duration</th>
          <th>Notes</th>
             <th></th>
             <th></th>
         </tr>
     </thead>
         <tbody>
             <% for(var i=0; i<interventionrecords.length; i++) { %>
                 <tr>
                  <td><!--date--></td>
                  <td><!--title--></td>
                  <td><!--activity--></td>
                  <td><!--duration--></td>
                  <td><!--notes--></td>
                  <td><!--edit button--></td>
                  <td><!--delete button--></td>
                 </tr>
              <% } %>
         </tbody>
 </table>
 <%} else { %>
  <p>Please add a student to enter intervention data. </p>
  <% } %>

<%- include('partials/footer') -%>