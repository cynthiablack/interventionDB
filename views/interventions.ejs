<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <%- include('partials/navbar') -%>
    <main class="container">
        <h1>Interventions</h1>
        <div class="row">
            <!-- Modal Trigger -->
            <div class="col s3 offset-s5">
          <button data-target="modal1" class="btn-small green darken-4 modal-trigger"><span><i class="material-icons">add</i> Add</span></button>
        </div>
          <!-- Modal Structure -->
          <div id="modal1" class="modal">
            <div class="modal-content">
                <form action="/interventions/createIntervention" method="POST">
                    <div class="input-field">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <div class="input-field">
                      <label for="source" class="form-label">Source</label>
                      <input type="text" class="form-control" id="source" name="source">
                  </div>
                  <div class="input-field">
                    <label for="targetArea" class="form-label">Target Area</label>
                    <input type="text" id="targetArea" name="targetArea">
                </div>
                    <button type="submit" class="btn green darken-4 space-below">Add Intervention</button>
                  </form>
            </div>
          </div>
           </div>
    <table class="striped responsive-table">
       <thead>
           <tr>
               <th>Intervention Title</th>
               <th>Source</th>
               <th>Target Area</th>
               <th></th>
           </tr>
       </thead>
           <tbody>
               <% for(var i=0; i<interventions.length; i++) { %>
                   <tr>
                    <td><a href="/interventions/<%=interventions[i]._id%>"><%= interventions[i].title %></a></td>
                    <td><a href="/interventions/<%=interventions[i]._id%>"><%= interventions[i].source %></a></td>
                    <td><a href="/interventions/<%=interventions[i]._id%>"><%= interventions[i].targetArea %></a></td>
                    <td><a href="/interventions/<%=interventions[i]._id%>"  class="btn light-green btn-small"><i class="material-icons">edit</i></a></td>
                   </tr>
                <% } %>
           </tbody>
   </table>
   <br>
    </main>
    <%- include('partials/footer') -%>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('.modal');
            M.Modal.init(elems, modal1);
        });
    </script>
</body>
</html>