<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') -%>
<body>
  <%- include('partials/navbar') -%>
  <main class="container">
    <h1><%= student.firstName %> <%= student.lastName %>'s Profile</h1>
    <div class="row">
      <div class="col s3 offset-s3">
        <!-- Modal Trigger -->
      <button data-target="modal1" class="btn light-green modal-trigger"><span><i class="material-icons">edit</i> edit student</span></button>
      
      <!-- Modal Structure -->
      <div id="modal1" class="modal">
        <div class="modal-content">
          <form action="/students/editStudent/<%=student.id%>?_method=PUT" method="POST">
            <div class="input-field">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" id="firstName" name="firstName" value="<%=student.firstName%>">
            </div>
            <div class="input-field">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" id="lastName" name="lastName" value="<%=student.lastName%>">
              </div>
            
                <button type="submit" class="btn green darken-4 space-below">Update Student</button>
              </form>
        </div>
      </div>
      </div>
        <!--Delete Button-->
        <form action="/students/deleteStudent/<%=student.id%>?_method=DELETE" method="POST">
          <button class="btn red darken-3" type="submit"><i class="fa-sharp fa-solid fa-user-slash"></i>Delete Student</button>
        </form>
      </div>
        
      </div>

        </div>
      </div>
      
      
        
        
         </div>
    </div>
<%if(student.user == user.id){ %>
<div class="row">
  <div class="container button-container">
    <div class="container">
      <%- include('partials/addrecord') -%>
    </div>
    
    
  </div>
</div>
<%}%>

  </main>
  <%- include('partials/footer') -%>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('.modal');
        M.Modal.init(elems, modal1);
    });
</script>
</body>
</html>