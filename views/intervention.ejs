<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <%- include('partials/navbar') -%>
    <main class="container">
        <table>
            <thead>
                <th>Title</th>
                <th>Source</th>
                <th>Target Area</th>
                <th></th>
            </thead>
            <tbody>
                <td><%= intervention.title %></td>
                <td><%=intervention.source%></td>
                <td><%=intervention.targetArea%></td>
                <td>
                      <div class="container form-container" id="edit-intervention">
                        <div class="card-content">
                            <details>
                                <summary class="btn light-green btn-small"><i class="material-icons">edit</i></summary>
                                    <form action="/interventions/editIntervention/<%=intervention.id%>?_method=PUT" method="POST">
                                        <div class="input-field">
                                        <label for="title" class="form-label">Title</label>
                                        <input type="text" id="title" name="title" value="<%=intervention.title%>">
                                        </div>
                                    <div class="input-field">
                                        <label for="source" class="form-label">Source</label>
                                        <input type="text" id="source" name="source" value="<%=intervention.source%>">
                                        </div>
                                        <div class="input-field">
                                        <label for="targetArea" class="form-label">targetArea</label>
                                        <input type="text" id="targetArea" name="targetArea" value="<%=intervention.targetArea%>">
                                        </div>
                                        <button type="submit" class="btn light-green btn-small">Update Intervention</button>
                                    </form>
                            </details>
                        </div>
                      </div>
                                </td>
            </tbody>
        </table>
    </main>
    <%- include('partials/footer') -%>
</body>
</html>