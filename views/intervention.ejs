<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header') -%>
<body>
    <%- include('partials/navbar') -%>
    <main class="container">
        <div class="fixed-action-btn click-to-toggle">
      <a class="btn-floating btn-large btn tooltipped green darken-4" data-tooltip="Menu">
        <i class="large material-icons">menu</i>
      </a>
      <ul>
        <!-- Edit Student - Modal 1 Trigger -->
        <li>
          <button data-target="modal1" class="btn-floating tooltipped light-green modal-trigger" data-tooltip="Edit Student">
            <span><i class="fa-solid fa-user-pen"></i> edit student</span>
          </button>
        </li>
        <!--Delete Student Button-->
        <li>
          <form action="/students/deleteStudent/<%=student.id%>?_method=DELETE" method="POST">
          <button class="btn-floating tooltipped red darken-3" type="submit" data-tooltip="Delete Student">
            <i class="fa-sharp fa-solid fa-user-slash"></i>Delete Student
          </button>
          </form>
        </li>
         <!-- Add Record Modal 2 Trigger -->
        <li>
          <button data-target="modal2" class="btn-floating tooltipped blue modal-trigger" data-tooltip="Add Record">
            <span><i class="material-icons">note_add</i> add record</span>
          </button>
        </li>
      </ul>
    </div>
        <table>
            <thead>
                <th>Title</th>
                <th>Source</th>
                <th>Target Area</th>
                <th></th>
            </thead>
            <tbody>
                <td><%= intervention.title %></td>
                <td><%=intervention.source%></td>
                <td><%=intervention.targetArea%></td>
                <td>
                      <div class="container form-container" id="edit-intervention">
                        <div class="card-content">
                            <details>
                                <summary class="btn light-green btn-small"><i class="material-icons">edit</i></summary>
                                    <form action="/interventions/editIntervention/<%=intervention.id%>?_method=PUT" method="POST">
                                        <div class="input-field">
                                        <label for="title" class="form-label">Title</label>
                                        <input type="text" id="title" name="title" value="<%=intervention.title%>">
                                        </div>
                                    <div class="input-field">
                                        <label for="source" class="form-label">Source</label>
                                        <input type="text" id="source" name="source" value="<%=intervention.source%>">
                                        </div>
                                        <div class="input-field">
                                        <label for="targetArea" class="form-label">targetArea</label>
                                        <input type="text" id="targetArea" name="targetArea" value="<%=intervention.targetArea%>">
                                        </div>
                                        <button type="submit" class="btn light-green btn-small">Update Intervention</button>
                                    </form>
                            </details>
                        </div>
                      </div>
                                </td>
            </tbody>
        </table>
    </main>
    <%- include('partials/footer') -%>
</body>
</html>