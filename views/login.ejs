<!DOCTYPE html>
<html lang="en">
  <%- include('partials/header') -%>
<body>

  <main class="container form-container">
    <div class="container">
      <img src="../images/computer.png" alt="logo of curved arrow pointing up and right" class="logo left"/>
      <h3 class="left">HELLO</h3>
    </div>
    <div class="container">
      <div class="card">
        <%- include('partials/logo') -%>
        <div class="divider"></div>
        <h4 class="lead centered">Please Login</h4>
          <div class="container">
            <div class="row">
              <section class="col-6">
                <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
                  <div class="alert alert-danger"><%= el.msg %></div>
                  <% }) %> <% } %> <% if (locals.messages.info) { %> <%
                  messages.info.forEach( el => { %>
                  <div class="alert alert-info"><%= el.msg %></div>
                  <% }) %> <% } %>
                  <form action="/login" method="POST">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Email address</label>
                      <input
                        type="email"
                        class="form-control"
                        id="exampleInputEmail1"
                        aria-describedby="emailHelp"
                        name="email"
                      />
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Password</label>
                      <input
                        type="password"
                        class="form-control"
                        id="exampleInputPassword1"
                        name="password"
                      />
                    </div>
                    <button type="submit" class="btn btn-teal space-below">Login</button>
                  </form>
              </section>
            </div>
          </div>
      </div>
    </div>
  </main>
</body>
</html>